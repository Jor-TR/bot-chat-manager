{
  "compilerOptions": {
    "target": "es5",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": false,
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "rootDir": "src", // 源码根目录
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "lib": ["ES2022"]
  },
  "include": ["src/*"]
}
