{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": false,
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "lib": ["ES2022"]
  },
  "include": ["src/*"]
}
